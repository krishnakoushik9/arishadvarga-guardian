{
  "name": "arishadvarga-guardian",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "dist": "npm run build && cp -r public .next/standalone/ && cp -r .next/static .next/standalone/.next/ && electron-builder --dir --win --linux && cp -r .next/standalone/node_modules dist/win-unpacked/resources/app-server/ && cp -r .next/standalone/node_modules dist/linux-unpacked/resources/app-server/ && electron-builder --prepackaged dist/win-unpacked --win && electron-builder --prepackaged dist/linux-unpacked --linux"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "jspdf": "^4.0.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.3",
    "portfinder": "^1.0.38",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "react-webcam": "^7.2.0",
    "recharts": "^3.6.0",
    "remark-gfm": "^4.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.3",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.arishadvarga.guardian",
    "productName": "Arishadvarga-Guardian",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "app-server",
        "filter": [
          "**/*"
        ]
      }
    ],
    "icon": "public/icon.png",
    "win": {
      "target": [
        "portable"
      ],
      "icon": "public/icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/icon.png",
      "category": "Utility"
    }
  }
}